<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task name :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/vt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category :"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<Spinner
        android:id="@+id/vt_catSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
  

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/vt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some day"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    <TextView
		             android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		         android:id="@+id/textView1"
		         android:text="Where to remind?" />
		 <RelativeLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content" >

		     

		     <com.google.android.maps.MapView
		         android:id = "@+id/gMap"
				 android:apiKey="@string/mapApiKey"
		         android:clickable="True"
		         android:layout_width="match_parent"
		         android:layout_height="300px"
		         android:focusableInTouchMode="True"
		      />
		 </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/vt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" heh.. "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/vt_okbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <Button
            android:id="@+id/vt_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

    </LinearLayout>
    
</LinearLayout>
    </ScrollView>
